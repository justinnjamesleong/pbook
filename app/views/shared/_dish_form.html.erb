<%= simple_form_for(@dish) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

    <div class="form-inputs">
      <%= f.input :name, label:"Name of item" %>
      <div class="d-flex justify-content-between flex-wrap">
        <p>item type</p>
      <%= f.input :photo, as: :file, class:"photo-preview" %>
      </div>
      <div class="d-flex justify-content-between flex-wrap">
      <p>flavor</p>
      <%= f.input :price, label:"Price of Dish" %>
      </div>
      <%= f.input :description, :input_html => { style:"height:150px" } %>
    </div>

  <div class="form-actions">
    <%= f.button :submit, class: "btn btn-dark", style:"border-radius:10px; " %>
  </div>
<% end %>
