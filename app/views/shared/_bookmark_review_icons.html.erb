<% if user_signed_in? %>
  <div class="d-flex icon-box">
    <%# Letting font awesome icon lead to creation/destruction of a bookmark %>
    <%= link_to dish_bookmarks_path(dish) do %>
    <%# font awesome icon +conditional. If user has bookmarked this item, color of icon is red%>
      <% if Bookmark.find_by(user: current_user, dish: dish).present? %>
        <i class="fa-solid fa-bookmark fa-xs mx-1 bookmark-icon-info" style="color:$red"></i>
      <% else %>
        <i class="fa-solid fa-bookmark fa-xs mx-1 bookmark-icon-info"></i>
      <% end %>
    <% end %>
      <i class="fa-solid fa-comment-dots fa-xs mx-1 review-icon-info"></i>
      <p class="review-count-info"><%= dish.reviews.count %></p>
  </div>
<% end %>
