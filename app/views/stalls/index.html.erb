<div class='bg-white' data-controller="search-food">
  <%= render 'shared/main_banner' %>

  <div class="container bg-white">
    <div class="row">
      <div class="col-12 mx-auto">
        <div class="pt-3 pb-1">
          <h2 class="text-center title">Top Rated Hawker Dishes in Singapore</h2>
        </div>
          <% if @dishes.count > 0 %>
            <%= render 'stalls/index/top_dishes', dishes: @dishes %>
            <%= render 'stalls/index/list_food', dishes: @dishes[4..23] %>
          <% else %>
            <p class="text-center pt-3">No <%= params[:query] %> was found.</p>
          <% end %>

        </div>
      </div>
    </div>
  </div>
