<div class="pt-3 pb-1">
  <h1>Top Rated Hawker Dishes in Singapore</h1>
</div>

<div data-controller="search-food">
    <%= form_with url: "/", method: :get, html: { class:
      'mb-4', data: { search_food_target: 'form' } } do |f| %>
      <%= f.text_field :query,
                      class: "form-control",
                      style:"width:50%",
                      placeholder: 'Type in a dish your craving for!',
                      value: params[:query],
                      data: { search_food_target: 'input' },
                      action: 'keyup->search-food#update' %>
            <% end %>

  <%= render 'stalls/index/top_dishes' %>
  <%= render 'stalls/index/list_food' %>

</div>
