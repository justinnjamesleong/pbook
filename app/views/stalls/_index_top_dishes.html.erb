

<% if params[:query].present? %>
  <div class="stall-show-grid-container d-none" data-search-food-target="topgrid">
<% else %>
  <div class="stall-show-grid-container" data-search-food-target="topgrid">
<% end %>
  <%# top dish %>
  <div class="div1">
    <%= render partial: 'shared/featured_dish_card', locals: { dish: @topdish, topstalls: @topstalls } %>
  </div>

  <%# dishes ranked 2 - 4 %>
  <div class="div2">
    <%= render 'shared/long_card', dishes: @topdishes %>
  </div>
</div>
