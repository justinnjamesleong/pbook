
<% if params[:query].present? && @dishes.length != 0%>
  <h2>Searching for <%= params[:query] %>...</h2>
<% elsif @dishes.length == 0 %>
  <h2>No query found... Please enter something else</h2>
<% else %>
  <div class="py-4 text-center">
    <h1>Be spoilt with your food choices!</h1>
    <h2>We have a million food flavors waiting for you!</h2>
  </div>
<% end %>

<div class="four-column-cards d-flex flex-wrap justify-content-around">
      <% @dishes.each do |dish| %>
      <div class="col-5 p-2 card" style="position:relative;">
        <div class="column-headers pt-2 px-3">
            <p><strong><%= dish.name[0..25] %></strong></p>
            <div class="d-flex justify-content-between rankandstar">
              <div class="stars-rank">
                  <i class="fa-light fa-star"></i>
                  <i class="fa-light fa-star"></i>
                  <i class="fa-light fa-star"></i>
                  <i class="fa-light fa-star"></i>
                  <i class="fa-light fa-star"></i>
              </div>
              <div class="rank">
              <p>Rank #?</p>
              </div>
            </div>
        </div>

        <img src="<%= dish.description  %>" alt="" class="img-fluid p-2" style="border-radius:20px">

        <div style="list-style-type: none" class="d-flex flex-row flex-wrap aligh-items-center px-2">
                <span class="px-1 mx-1 btn pink-button-small">flavour</span>
                <span class="px-1 mx-1 btn pink-button-small">flavour</span>
                <span class="px-1 mx-1 btn pink-button-small">flavour</span>
                <%=render 'shared/bookmark_review_icons', dish: dish %>
        </div>

      </div>
      <% end %>

  </div>
