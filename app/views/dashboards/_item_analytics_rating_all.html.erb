<div class='d-flex flex-column analytic-display'>
  <%# Your dish rating %>
  <div>
    <div class='analytic-display-summary'>
      <p>
        Your dish is the <strong><span class="dark-red"> <%= @dish.rank %> </span></strong> highest rated Hawker Dish out of <%= Dish.count %> dishes
      </p>
    </div>
    <%# rating and stars %>
    <div class='d-flex justify-content-between'>
      <p>Your rating:</p>
      <div class='d-flex justify-content-between'>
        <%= render 'dashboards/stars.html.erb', display: dish.score.round %>
        <p>(<%= dish.score.round(2) %>)</p>
      </div>
    </div>
  </div>
  <%# hawker dish rating %>
  <%# rating and stars %>
  <div class='d-flex justify-content-between'>
    <p>Avg. Hawker Rating:</p>
    <div class='d-flex justify-content-between'>

     <%= render 'dashboards/stars.html.erb', display: Dish.score_average.round %>
      <p> (<%= Dish.score_average.round(2) %>) </p>
    </div>
  </div>
</div>
