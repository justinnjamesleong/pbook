<div class='d-flex flex-column analytic-display analytic-flavour-display'>
  <%# Your dish flavours %>
  <div>
    <div>
      <p class='analytic-display-summary'>Reviewers find your dish:</p>
    </div>
    <div style="list-style-type: none" class="d-flex flex-row justify-content-around stat-holder">
      <%# <%= render 'shared/top_dish_flavour.html.erb', dish: @dish  %>
      <% @dish.top_3_reviewed_flavors.each do |flavor, score| %>
        <%= link_to "/?query=#{flavor}",style:"text-decoration:none" do  %>
          <span class="pink-badge">
            <%= flavor %>
              <span class="number-badge">
                <%= score %>
                <span class="visually-hidden">reviews</span>
              </span>
          </span>
        <% end %>
      <% end %>

    </div>
  </div>
  <%# hawker dish flavours %>
  <div>
    <div>
      <p class='analytic-display-summary mt-3'>Top <%= "#{@dish.dish_type}"%> flavors</p>
    </div>
    <div style="list-style-type: none" class="d-flex flex-row justify-content-around stat-holder">

      <% @dish.top_3_flavors_of_dish_type.each do |flavor, score| %>
        <%= link_to "/?query=#{flavor}",style:"text-decoration:none" do  %>
          <span class="pink-badge">
            <%= flavor %>
              <span class="number-badge">
                <%= score %>
              <span class="visually-hidden">reviews</span>
            </span>
          </span>
        <% end %>
      <% end %>
      <%# <%= render 'shared/top_dish_flavour.html.erb', dish: @dish.type_flavors %>
  </div>
</div>
